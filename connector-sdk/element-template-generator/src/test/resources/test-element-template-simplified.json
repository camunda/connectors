{
  "$schema": "https://unpkg.com/@camunda/zeebe-element-templates-json-schema/resources/schema.json",
  "name": "My Connector Template",
  "id": "my-connector-template",
  "description": "My Connector Template Description",
  "documentationRef": "https://docs.camunda.org/manual/latest/reference/connect/",
  "version": 1,
  "category": {
    "id": "connectors",
    "name": "Connectors"
  },
  "appliesTo": [
    "bpmn:Task"
  ],
  "elementType": {
    "value": "bpmn:ServiceTask"
  },
  "groups": [
    {
      "id": "settings",
      "label": "Settings"
    },
    {
      "id": "auth",
      "label": "Auth"
    },
    {
      "id": "message",
      "label": "Message"
    },
    {
      "id": "output",
      "label": "Output mapping"
    },
    {
      "id": "error",
      "label": "Error handling"
    }
  ],
  "properties": [
    {
      "value": "my-connector-type",
      "binding": {
        "type": "zeebe:taskDefinition:type"
      },
      "type": "Hidden"
    },
    {
      "id": "recipient",
      "label": "Recipient",
      "feel": "optional",
      "binding": {
        "name": "recipient",
        "type": "zeebe:input"
      },
      "type": "String"
    },
    {
      "id": "authorization.authType",
      "label": "Auth type",
      "optional": false,
      "group": "settings",
      "binding": {
        "name": "authorization.authType",
        "type": "zeebe:input"
      },
      "type": "Dropdown",
      "choices": [
        {
          "name": "Basic auth",
          "value": "basic"
        },
        {
          "name": "Token auth",
          "value": "token"
        }
      ]
    },
    {
      "id": "authorization.username",
      "label": "Username",
      "optional": false,
      "feel": "optional",
      "group": "auth",
      "binding": {
        "name": "authorization.username",
        "type": "zeebe:input"
      },
      "condition": {
        "property": "authorization.authType",
        "equals": "basic"
      },
      "type": "String"
    },
    {
      "id": "authorization.password",
      "label": "Password",
      "optional": false,
      "feel": "optional",
      "group": "auth",
      "binding": {
        "name": "authorization.password",
        "type": "zeebe:input"
      },
      "condition": {
        "property": "authorization.authType",
        "equals": "basic"
      },
      "type": "String"
    },
    {
      "id": "authorization.token",
      "label": "Token",
      "optional": false,
      "feel": "optional",
      "group": "auth",
      "binding": {
        "name": "authorization.token",
        "type": "zeebe:input"
      },
      "condition": {
        "property": "authorization.authType",
        "equals": "token"
      },
      "type": "String"
    },
    {
      "id": "message",
      "label": "Message",
      "optional": false,
      "feel": "optional",
      "group": "message",
      "binding": {
        "name": "message",
        "type": "zeebe:input"
      },
      "type": "Text"
    },
    {
      "id": "resultVariable",
      "label": "Result Variable",
      "description": "Name of variable to store the response in",
      "feel": "optional",
      "group": "output",
      "binding": {
        "key": "resultVariable",
        "type": "zeebe:taskHeader"
      },
      "type": "String"
    },
    {
      "id": "resultExpression",
      "label": "Result Expression",
      "description": "Expression to map the response into process variables",
      "feel": "required",
      "group": "output",
      "binding": {
        "key": "resultExpression",
        "type": "zeebe:taskHeader"
      },
      "type": "Text"
    },
    {
      "id": "errorExpression",
      "label": "Error Expression",
      "description": "Expression to handle errors. Details in the <a href=\"https://docs.camunda.io/docs/components/connectors/use-connectors/\" target=\"_blank\">documentation</a>.",
      "feel": "required",
      "group": "error",
      "binding": {
        "key": "errorExpression",
        "type": "zeebe:taskHeader"
      },
      "type": "Text"
    }
  ]
}